<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorSecondaryVariant">@color/accent_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Material3.HeadlineLarge</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Material3.TitleSmall</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Material3.BodySmall</item>
        <item name="textAppearanceButton">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Material3.LabelSmall</item>
    </style>

    <!-- Card Styles -->
    <style name="AppCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_margin">@dimen/spacing_md</item>
    </style>

    <!-- Button Styles -->
    <style name="AppButtonPrimary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/spacing_sm</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="AppButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_green</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="cornerRadius">@dimen/spacing_sm</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <!-- Text Styles -->
    <style name="AppTextHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTextSubheading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTextBody" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="AppTextCaption" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Input Field Styles -->
    <style name="AppTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_green</item>
        <item name="hintTextColor">@color/primary_green</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_sm</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_sm</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_sm</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_sm</item>
    </style>

    <!-- Status Badge Styles -->
    <style name="StatusBadgeNormal">
        <item name="android:background">@drawable/role_badge_background</item>
        <item name="android:backgroundTint">@color/status_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingHorizontal">@dimen/spacing_sm</item>
        <item name="android:paddingVertical">@dimen/spacing_xs</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StatusBadgeWarning" parent="StatusBadgeNormal">
        <item name="android:backgroundTint">@color/status_warning</item>
    </style>

    <style name="StatusBadgeAbnormal" parent="StatusBadgeNormal">
        <item name="android:backgroundTint">@color/status_abnormal</item>
    </style>

    <!-- Day Button Style -->
    <style name="DayButton">
        <item name="android:background">@drawable/rounded_button_outline</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>

</resources> 